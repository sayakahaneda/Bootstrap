</head>

<body>

  <header>
    <ul>
      <li><%= link_to 'トップページ', root_path %></li>
      <li><%= link_to '一覧', blogs_path %></li>
    </ul>
  </header>

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
